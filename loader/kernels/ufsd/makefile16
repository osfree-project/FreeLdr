#
# makefile for 16-bits C code
#

ADD_COPT   = -ms -nc=CODE -nt=_TEXT16 -nd=_ -g=DGROUP16 -dOS2 -dMB_KERN -dMINIFSD -i=$(MYDIR).. -i=$(MYDIR)..$(SEP)..$(SEP)include

!include $(%ROOT)/mk/loader.mk

.SUFFIXES:
.SUFFIXES: .obj .sob .c

.c:   $(MYDIR)

.obj: $(PATH)

.sob: $(PATH)

all1: $(PATH)drv.obj $(PATH)drv.sob

.c.obj:
 $(CC16) -dSHIFT=0 $(COPT) -fr=$^*.err -fo=$^@ $[@

.c.sob:
 $(CC16) -dSHIFT=$(SHIFT) $(COPT) -fr=$^*.err -fo=$^@ $[@
